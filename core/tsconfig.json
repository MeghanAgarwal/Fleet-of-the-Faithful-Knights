{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/@types/*",
        "src/*"
      ]
    },
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6" ,"dom"],
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "preserveConstEnums": true,
    "outDir": "../node_modules/@ffk",
    "strict": true,
    "allowUnreachableCode": false
  },
  "include": [
    "./src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    ""
  ]
}
