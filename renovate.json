{
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "^@angular"
      ],
      "matchUpdateTypes": [
        "pin",
        "major"
      ],
      "labels": [
        "triage"
      ]
    },
    {
      "matchPackagePatterns": [
        "*"
      ],
      "matchUpdateTypes": [
        "pin",
        "major",
        "minor",
        "patch",
        "bump",
        "rollback"
      ]
    }
  ],
  "pruneStaleBranches": true,
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security", "triage"]
  },
  "labels": [
    "dependencies"
  ],
  "reviewers": [
    "kashw2"
  ]
}
