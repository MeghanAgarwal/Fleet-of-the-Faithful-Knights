{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "*": [
        "node_modules/@types/*",
        "src/*"
      ]
    },
    "module": "es6",
    "target": "es2015",
    "noImplicitAny": false,
    "removeComments": true,
    "declaration": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "outDir": "/dist",
    "strict": true
  },
  "angularCompilerOptions": {
    "enableResourceInlining": true
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "types": ["node"],
  "exclude": [
    ""
  ]
}
